<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>url shortner</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <!-- <link rel="stylesheet" href="../bootstrap/css/bootstrap.css"> -->
    <style>
        td{
            max-width: 30%;
            overflow: hidden;
            background-color: rgb(235, 235, 235);
            margin:2%;
        }
        
    </style>
</head>

<body>
    
        <div class="container my-4">
        <div class="logo">
            <!-- <img src="/home/abhimishra/mern/url-shortner/views/logo.png" alt="" class="img-fluid"> -->
            <span><h2>Url-Shortner</h2></span><span class="lead text-secondary">By Abhi Mishra</span>
        </div>
        <form class="my-4"action="/shortUrls" method="POST">
            <div class="form-group">
                <label for="fullUrl" class="text-capitalize">paste url here</label>
                <br>

                <span>  <input type="text" id="fullUrl" name="fullUrl" placeholder="url here!"> </span>
                <span>  <button class="btn btn-pill btn-success  px-3" type="submit">short</button> </span>
            </div>
            
        </form>
        <!-- <a class="my-4 border border-success px-4 py-3 rounded"href="">shortlink generated</a> -->
        <!-- <button class="btn btn-primary">copy!</button> -->
        <table style="width:100%" class="table table-stripped">
            <thead class="">
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Viwes</th>
                <th>Remove</th>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl =>{ %>
                    <tr class="">
                        <td class="my-4">
                            <a href="<%= shortUrl.full %>"><%= shortUrl.full %> </a>
                        </td>
                        <td class="my-4">
                            <a href="<%= shortUrl.short %>"><%= setup.hostname +"/"+ shortUrl.short %> </a>
                        </td>
                        <td class="my-4"><%= shortUrl.clicks %>  </td>
                        <td class="my-4">
                            <form action="/shortUrls/del/" method="POST">
                                <input type="hidden" name="toDelete" value="<%= shortUrl.short %> ">
                                <button class="btn btn-danger">delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %> 
                
            </tbody>
        </table>
        
    </div>
    
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="http://localhost:5000/js/bootstrap.min.js"></script>
</body>

</html>